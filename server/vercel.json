{
  "version": 2,
  "projects": {
    "client": {
      "rootDirectory": "client",
      "buildCommand": "npm install && npm run build",
      "outputDirectory": "dist"
    },
    "server": {
      "rootDirectory": "server",
      "buildCommand": "npm install",
      "outputDirectory": null
    }
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
